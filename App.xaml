<Application x:Class="ExplorerPro.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ExplorerPro">
    <!-- Remove StartupUri attribute -->
    <Application.Resources>
        <!-- Basic application-wide resources -->
        <ResourceDictionary>
            <!-- Global colors -->
            <SolidColorBrush x:Key="PrimaryColor" Color="#007ACC"/>
            <SolidColorBrush x:Key="SecondaryColor" Color="#5C2D91"/>
            <SolidColorBrush x:Key="AccentColor" Color="#FF4081"/>
            <SolidColorBrush x:Key="BackgroundColor" Color="#F5F5F5"/>
            <SolidColorBrush x:Key="TextColor" Color="#333333"/>
            <SolidColorBrush x:Key="BorderColor" Color="#DDDDDD"/>
            
            <!-- Common margins -->
            <Thickness x:Key="StandardMargin">8</Thickness>
            <Thickness x:Key="DoubleMargin">16</Thickness>
            <Thickness x:Key="HalfMargin">4</Thickness>
            
            <!-- Common sizes -->
            <GridLength x:Key="StandardRowHeight">32</GridLength>
            <GridLength x:Key="StandardColumnWidth">120</GridLength>
            <GridLength x:Key="SidebarWidth">250</GridLength>
            
            <!-- Common font sizes -->
            <sys:Double x:Key="SmallFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">11</sys:Double>
            <sys:Double x:Key="StandardFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">12</sys:Double>
            <sys:Double x:Key="LargeFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">14</sys:Double>
            <sys:Double x:Key="HeaderFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">16</sys:Double>
            <sys:Double x:Key="TitleFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">20</sys:Double>
        </ResourceDictionary>
    </Application.Resources>
</Application>