<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 
    LIGHT THEME
    These resources define the light theme appearance for the application.
    -->
    
    <!-- Primary Color Palette -->
    <SolidColorBrush x:Key="PrimaryColor" Color="#007ACC"/>
    <SolidColorBrush x:Key="PrimaryColorLight" Color="#3D9AE2"/>
    <SolidColorBrush x:Key="PrimaryColorDark" Color="#005A9E"/>
    
    <SolidColorBrush x:Key="SecondaryColor" Color="#5C2D91"/>
    <SolidColorBrush x:Key="SecondaryColorLight" Color="#7E58B5"/>
    <SolidColorBrush x:Key="SecondaryColorDark" Color="#49236F"/>
    
    <SolidColorBrush x:Key="AccentColor" Color="#FF4081"/>
    <SolidColorBrush x:Key="AccentColorLight" Color="#FF6B9E"/>
    <SolidColorBrush x:Key="AccentColorDark" Color="#C60055"/>
    
    <!-- Base UI Colors -->
    <SolidColorBrush x:Key="WindowBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BackgroundColor" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="TextColor" Color="#333333"/>
    <SolidColorBrush x:Key="SubtleTextColor" Color="#767676"/>
    <SolidColorBrush x:Key="BorderColor" Color="#DDDDDD"/>
    
    <!-- Status Colors -->
    <SolidColorBrush x:Key="SuccessColor" Color="#5CB85C"/>
    <SolidColorBrush x:Key="WarningColor" Color="#F0AD4E"/>
    <SolidColorBrush x:Key="ErrorColor" Color="#D9534F"/>
    <SolidColorBrush x:Key="InfoColor" Color="#5BC0DE"/>
    
    <!-- Button Colors -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="#333333"/>
    <SolidColorBrush x:Key="ButtonBorder" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="ButtonBackgroundHover" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="ButtonBorderHover" Color="#BBBBBB"/>
    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#D0D0D0"/>
    <SolidColorBrush x:Key="ButtonBorderPressed" Color="#AAAAAA"/>
    
    <!-- ToggleButton Colors -->
    <SolidColorBrush x:Key="ToggleButtonBackground" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="ToggleButtonForeground" Color="#333333"/>
    <SolidColorBrush x:Key="ToggleButtonBorder" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="ToggleButtonBackgroundHover" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="ToggleButtonBorderHover" Color="#BBBBBB"/>
    <SolidColorBrush x:Key="ToggleButtonCheckedBackground" Color="#007ACC"/>
    <SolidColorBrush x:Key="ToggleButtonCheckedForeground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ToggleButtonCheckedBorder" Color="#005A9E"/>
    
    <!-- ListView Colors -->
    <SolidColorBrush x:Key="ListViewBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ListViewBorder" Color="#DDDDDD"/>
    <SolidColorBrush x:Key="ListViewItemHoverBackground" Color="#F5F9FC"/>
    <SolidColorBrush x:Key="ListViewItemSelectedBackground" Color="#CCE8FF"/>
    <SolidColorBrush x:Key="ListViewItemSelectedForeground" Color="#000000"/>
    <SolidColorBrush x:Key="ListViewItemAlternateBackground" Color="#F9F9F9"/>
    
    <!-- TreeView Colors -->
    <SolidColorBrush x:Key="TreeViewBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TreeViewBorder" Color="#DDDDDD"/>
    <SolidColorBrush x:Key="TreeViewItemHoverBackground" Color="#F5F9FC"/>
    <SolidColorBrush x:Key="TreeViewItemSelectedBackground" Color="#CCE8FF"/>
    <SolidColorBrush x:Key="TreeViewItemSelectedForeground" Color="#000000"/>
    <SolidColorBrush x:Key="TreeViewItemSelectedInactiveBackground" Color="#E5E5E5"/>
    <SolidColorBrush x:Key="TreeViewItemSelectedInactiveForeground" Color="#333333"/>
    <SolidColorBrush x:Key="TreeLineColor" Color="#C0C0C0"/>
    <SolidColorBrush x:Key="TreeLineHighlightColor" Color="#007ACC"/>
    
    <!-- Tab Control Colors -->
    <SolidColorBrush x:Key="TabControlBackground" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="TabControlBorder" Color="#DDDDDD"/>
    <SolidColorBrush x:Key="TabBackground" Color="#EFEFEF"/>
    <SolidColorBrush x:Key="TabSelectedBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TabSelectedBorderBrush" Color="#999999"/>
    <SolidColorBrush x:Key="TabBorderBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="TabSelectedForeground" Color="#333333"/>
    <SolidColorBrush x:Key="TabHoverBackground" Color="#E5E5E5"/>
    
    <!-- TextBox Colors -->
    <SolidColorBrush x:Key="TextBoxBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextBoxForeground" Color="#333333"/>
    <SolidColorBrush x:Key="TextBoxBorder" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="TextBoxBorderHover" Color="#999999"/>
    <SolidColorBrush x:Key="TextBoxBorderFocused" Color="#007ACC"/>
    
    <!-- ComboBox Colors -->
    <SolidColorBrush x:Key="ComboBoxBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ComboBoxForeground" Color="#333333"/>
    <SolidColorBrush x:Key="ComboBoxBorder" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="ComboBoxBorderHover" Color="#999999"/>
    <SolidColorBrush x:Key="ComboBoxBorderFocused" Color="#007ACC"/>
    <SolidColorBrush x:Key="ComboBoxPopupBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ComboBoxPopupBorder" Color="#CCCCCC"/>
    
    <!-- Menu Colors -->
    <SolidColorBrush x:Key="MenuBackground" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="MenuBorderBrush" Color="#DDDDDD"/>
    <SolidColorBrush x:Key="MenuItemBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="MenuItemHighlightedBackground" Color="#DADADA"/>
    <SolidColorBrush x:Key="MenuItemHighlightedBorder" Color="#BBBBBB"/>
    <SolidColorBrush x:Key="MenuSeparatorBrush" Color="#DDDDDD"/>
    
    <!-- Toolbar Colors -->
    <SolidColorBrush x:Key="ToolbarBackground" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="ToolbarBorderBrush" Color="#E0E0E0"/>
    
    <!-- GridSplitter Colors -->
    <SolidColorBrush x:Key="GridSplitterBackground" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="GridSplitterBorder" Color="#DDDDDD"/>
    <SolidColorBrush x:Key="GridSplitterHighlight" Color="#007ACC"/>
    
    <!-- GroupBox Colors -->
    <SolidColorBrush x:Key="GroupBoxBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="GroupBoxBorder" Color="#DDDDDD"/>
    <SolidColorBrush x:Key="GroupBoxHeaderBackground" Color="#F5F5F5"/>
    
    <!-- Expander Colors -->
    <SolidColorBrush x:Key="ExpanderBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ExpanderBorder" Color="#DDDDDD"/>
    <SolidColorBrush x:Key="ExpanderHeaderBackground" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="ExpanderHeaderBackgroundHover" Color="#E5E5E5"/>
    <SolidColorBrush x:Key="ExpanderHeaderBackgroundPressed" Color="#D5D5D5"/>
    
    <!-- ScrollBar Colors -->
    <SolidColorBrush x:Key="ScrollBarThumbBackground" Color="#CDCDCD"/>
    <SolidColorBrush x:Key="ScrollBarThumbBackgroundHover" Color="#A6A6A6"/>
    <SolidColorBrush x:Key="ScrollBarThumbBackgroundDragging" Color="#606060"/>
    <SolidColorBrush x:Key="ScrollBarTrackBackground" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="ScrollBarButtonBackground" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="ScrollBarButtonBackgroundHover" Color="#DADADA"/>
    <SolidColorBrush x:Key="ScrollBarButtonBackgroundPressed" Color="#C0C0C0"/>
    
    <!-- ScrollViewer Colors -->
    <SolidColorBrush x:Key="ScrollViewerBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ScrollViewerBorder" Color="#DDDDDD"/>
    
    <!-- Context Menu Colors -->
    <SolidColorBrush x:Key="ContextMenuBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ContextMenuBorder" Color="#CCCCCC"/>
    
    <!-- Tooltip Colors -->
    <SolidColorBrush x:Key="ToolTipBackground" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="ToolTipBorder" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="ToolTipText" Color="#333333"/>
    
    <!-- Override System Colors -->
    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#CCE8FF"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.WindowTextBrushKey}" Color="#333333"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.ActiveBorderBrushKey}" Color="#999999"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveBorderBrushKey}" Color="#CCCCCC"/>
</ResourceDictionary>