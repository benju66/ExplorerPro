<UserControl x:Class="ExplorerPro.UI.FileTree.ImprovedFileTreeListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExplorerPro.UI.FileTree"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/FileTreeResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Define GridView here to use as a resource (accessed in code-behind) -->
            <GridView x:Key="columnHeaderGridView" x:Name="columnHeaderGridView">
                <GridViewColumn Header="Name" Width="{Binding NameColumnWidth, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type local:ImprovedFileTreeListView}}}"/>
                <GridViewColumn Header="Size" Width="{Binding SizeColumnWidth, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type local:ImprovedFileTreeListView}}}"/>
                <GridViewColumn Header="Type" Width="{Binding TypeColumnWidth, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type local:ImprovedFileTreeListView}}}"/>
                <GridViewColumn Header="Date Modified" Width="{Binding DateColumnWidth, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type local:ImprovedFileTreeListView}}}"/>
            </GridView>
            
            <!-- Converter for level to margin -->
            <local:LevelToIndentConverter x:Key="LevelToIndentConverter"/>
            
            <!-- Converter for expander positioning to the right of lines -->
            <local:ExpanderRightIndentConverter x:Key="ExpanderRightIndentConverter"/>
            
            <!-- Boolean to Visibility Converter -->
            <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid x:Name="MainGrid">
        <!-- Column Headers Row -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Column Headers with Border for background -->
        <Border Grid.Row="0" Background="{DynamicResource BackgroundColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1">
            <Grid>
                <!-- Use a custom header that allows resizing -->
                <Grid x:Name="HeaderGrid" Height="25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="NameHeaderColumn" Width="{Binding NameColumnWidth, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type local:ImprovedFileTreeListView}}}"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition x:Name="SizeHeaderColumn" Width="{Binding SizeColumnWidth, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type local:ImprovedFileTreeListView}}}"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition x:Name="TypeHeaderColumn" Width="{Binding TypeColumnWidth, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type local:ImprovedFileTreeListView}}}"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition x:Name="DateHeaderColumn" Width="{Binding DateColumnWidth, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type local:ImprovedFileTreeListView}}}"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Column Headers -->
                    <Border Grid.Column="0" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0" Background="Transparent">
                        <TextBlock Text="Name" Padding="6,3" VerticalAlignment="Center" Foreground="{DynamicResource TextColor}"/>
                    </Border>
                    
                    <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Transparent" Cursor="SizeWE"/>
                    
                    <Border Grid.Column="2" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0" Background="Transparent">
                        <TextBlock Text="Size" Padding="6,3" VerticalAlignment="Center" TextAlignment="Right" Foreground="{DynamicResource TextColor}"/>
                    </Border>
                    
                    <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch" Background="Transparent" Cursor="SizeWE"/>
                    
                    <Border Grid.Column="4" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0" Background="Transparent">
                        <TextBlock Text="Type" Padding="6,3" VerticalAlignment="Center" Foreground="{DynamicResource TextColor}"/>
                    </Border>
                    
                    <GridSplitter Grid.Column="5" Width="5" HorizontalAlignment="Stretch" Background="Transparent" Cursor="SizeWE"/>
                    
                    <Border Grid.Column="6" Background="Transparent">
                        <TextBlock Text="Date Modified" Padding="6,3" VerticalAlignment="Center" Foreground="{DynamicResource TextColor}"/>
                    </Border>
                </Grid>
                
                <!-- Keep the original GridViewHeaderRowPresenter hidden for compatibility -->
                <GridViewHeaderRowPresenter x:Name="headerPresenter" 
                                           Columns="{Binding Source={StaticResource columnHeaderGridView}, Path=Columns}"
                                           Visibility="Collapsed"/>
            </Grid>
        </Border>
        
        <!-- File TreeView with proper column alignment -->
        <TreeView x:Name="fileTreeView" Grid.Row="1" BorderThickness="0"
                 VirtualizingStackPanel.IsVirtualizing="True"
                 VirtualizingStackPanel.VirtualizationMode="Recycling"
                 ItemContainerStyle="{StaticResource TreeViewItemWithLines}">
            
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                    <!-- Grid to align with column headers -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <!-- Dynamic column definitions that match the header columns -->
                            <ColumnDefinition Width="{Binding ActualWidth, ElementName=NameHeaderColumn}"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="{Binding ActualWidth, ElementName=SizeHeaderColumn}"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="{Binding ActualWidth, ElementName=TypeHeaderColumn}"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="{Binding ActualWidth, ElementName=DateHeaderColumn}"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Name Column with tree structure -->
                        <Grid Grid.Column="0">
                            <!-- Background canvas for drawing connecting lines -->
                            <Canvas Background="Transparent"
                                   Margin="{Binding Level, Converter={StaticResource LevelToIndentConverter}}"
                                   Height="20" HorizontalAlignment="Left" Width="1000">
                                
                                <!-- Horizontal line to expander (extended to reach expander position) -->
                                <Line x:Name="HorizontalLine"
                                      X1="0" Y1="10" X2="25" Y2="10"
                                      Stroke="{DynamicResource TreeLineColor}"
                                      StrokeThickness="1">
                                    <Line.Style>
                                        <Style TargetType="Line">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Level}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Line.Style>
                                </Line>
                                
                                <!-- Vertical line from parent -->
                                <Line x:Name="VerticalLine"
                                      X1="0" Y1="0" X2="0" Y2="10"
                                      Stroke="{DynamicResource TreeLineColor}"
                                      StrokeThickness="1">
                                    <Line.Style>
                                        <Style TargetType="Line">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Level}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Line.Style>
                                </Line>
                            </Canvas>
                            
                            <!-- Name content with indentation and expander -->
                            <StackPanel Orientation="Horizontal"
                                       Margin="{Binding Level, Converter={StaticResource ExpanderRightIndentConverter}}">
                                
                                <!-- Expander Toggle Button -->
                                <ToggleButton IsChecked="{Binding IsExpanded, Mode=TwoWay}">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton" BasedOn="{StaticResource Windows11ExpanderStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsDirectory}" Value="False">
                                                    <Setter Property="Visibility" Value="Hidden" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding HasChildren}" Value="False">
                                                    <Setter Property="Visibility" Value="Hidden" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>
                                
                                <!-- File/Folder Icon -->
                                <Image Source="{Binding Icon}" Width="16" Height="16" 
                                       Margin="2,0,5,0" VerticalAlignment="Center"/>
                                
                                <!-- File/Folder Name -->
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           Foreground="{Binding Foreground}"
                                           FontWeight="{Binding FontWeight}"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Size Column -->
                        <TextBlock Grid.Column="2" Text="{Binding Size}" 
                                  VerticalAlignment="Center" 
                                  TextAlignment="Right"
                                  Margin="5,0"
                                  TextTrimming="CharacterEllipsis"
                                  Foreground="{Binding Foreground}"
                                  FontWeight="{Binding FontWeight}"/>
                        
                        <!-- Type Column -->
                        <TextBlock Grid.Column="4" Text="{Binding Type}" 
                                  VerticalAlignment="Center" 
                                  TextAlignment="Left"
                                  Margin="5,0"
                                  TextTrimming="CharacterEllipsis"
                                  Foreground="{Binding Foreground}"
                                  FontWeight="{Binding FontWeight}"/>
                        
                        <!-- Date Modified Column -->
                        <TextBlock Grid.Column="6" Text="{Binding LastModifiedStr}" 
                                  VerticalAlignment="Center" 
                                  TextAlignment="Left"
                                  Margin="5,0"
                                  TextTrimming="CharacterEllipsis"
                                  Foreground="{Binding Foreground}"
                                  FontWeight="{Binding FontWeight}"/>
                    </Grid>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        
        <!-- Progress overlay (hidden and no longer used for Outlook extraction) -->
        <Border x:Name="ProgressOverlay" 
               Visibility="Collapsed"
               Grid.RowSpan="2">
            <!-- Content removed since we're not using it anymore -->
        </Border>
    </Grid>
</UserControl>